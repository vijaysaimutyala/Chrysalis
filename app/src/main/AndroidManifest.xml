<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studioemvs.chrysalis">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".RedeemPointsActivity" />
        <activity android:name=".ProgressUpdateActivity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".ApprovalsActivity" />
        <activity
            android:name=".UserAndStatusActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RecentUpdatesActivity" />
        <activity android:name=".UserActivitesApprovalListActivity" />
        <activity android:name=".NewRegistrationsListActivity" />
        <activity android:name=".PasswordResetActivity" />
        <activity
            android:name=".AdminEditAddUpdateActivity"
            android:label="@string/title_activity_admin_edit_add_update"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddNewActivity"
            android:label="@string/addActivity"/>
        <activity android:name=".ActivityApprovalDetials" />
        <activity android:name=".AdminEditActivity"></activity>
    </application>

</manifest>