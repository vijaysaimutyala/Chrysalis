<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studioemvs.chrysalis">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_butterflyappicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_butterflyappicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="android.support.multidex.MultiDexApplication">
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".RedeemPointsActivity" />
        <activity android:name=".ProgressUpdateActivity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".ApprovalsActivity" />
        <activity
            android:name=".UserAndStatusActivity"
            android:label="@string/title_activity_user_and_status"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RecentUpdatesActivity" />
        <activity android:name=".UserActivitesApprovalListActivity" />
        <activity android:name=".NewRegistrationsListActivity" />
        <activity android:name=".PasswordResetActivity"></activity>
    </application>

</manifest>