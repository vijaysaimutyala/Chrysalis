<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.studioemvs.chrysalis.UpdateProgressActivity"
    android:layout_margin="10dp">

    <Spinner
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:id="@+id/activitySpinner"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">
    </Spinner>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/pointsForActivity"
        android:text="20"
        android:textSize="70sp"
        android:layout_marginTop="102dp"
        app:layout_constraintTop_toBottomOf="@+id/activitySpinner"
        android:layout_marginLeft="143dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/submitActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toBottomOf="@+id/pointsForActivity"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.447" />


</android.support.constraint.ConstraintLayout>
