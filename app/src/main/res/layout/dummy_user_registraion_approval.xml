<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/regToApproveCardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_usertoapprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abcdefgh"
            android:textColor="@color/primary_text_material_light"
            android:textSize="20sp"
            android:paddingStart="5dp"/>

        <TextView
            android:id="@+id/txt_useremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:text="123"
            android:textSize="20sp"
            android:layout_below="@id/txt_usertoapprove"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_userGroup"
            android:layout_below="@id/txt_useremail"
            android:text="AI"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_prevWork"
            android:text="sdlfasldkfjsdlkfjsdalkfjsadlkfjlsdkjf"
            android:layout_below="@id/txt_userGroup"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/txt_prevWork"
            android:weightSum="2">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adminApproveRegistration"
                android:text="@string/apprvRegistration"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adminRejectRegistration"
                android:text="@string/rejectRegistration"
                android:layout_weight="1"/>
        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>