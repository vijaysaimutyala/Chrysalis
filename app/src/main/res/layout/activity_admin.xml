<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    tools:context="com.studioemvs.chrysalis.AdminActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toBeApproved"
        android:text="@string/toBeApproved"
        android:textSize="20sp"
        android:textColor="@color/primary_text_material_light" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/approvalPending"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:layout_below="@id/toBeApproved" />
    </RelativeLayout>